# Flask environment variables
FLASK_DEBUG=0
PORT=5001
SECRET_KEY=dev-secret

# CORS: allow your frontend dev server(s) (comma-separated)
# Example supports Vite on 8080 or 8081
CORS_ORIGINS=http://localhost:8080

# Optional: Weather API key (OpenWeather)
# Get one at https://openweathermap.org/api
OPENWEATHER_API_KEY=


# MongoDB connection
# e.g., mongodb://localhost:27017  or  mongodb+srv://user:pass@cluster0.xxxxx.mongodb.net
MONGO_URI=

# Optional DB name (defaults to "climai")
MONGO_DB=climai

# Gemini (Google Generative AI) configuration
# Set your real key below (do NOT commit production secrets)
GEMINI_API_KEY=
# Preferred model; fallback logic in code uses gemini-2.0-flash if unset
GEMINI_MODEL_NAME=gemini-2.0-flash
MODEL_NAME=gemini-2.0-flash
